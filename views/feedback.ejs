<%- include('partials/header') %>
<main>
  <h2>Give us your Feedback</h2>
  <form method="POST" action="/feedback">
    <label>Rating:</label>
    <select name="rating" required>
      <option value="">-- Choose --</option>
      <option value="1">⭐</option>
      <option value="2">⭐⭐</option>
      <option value="3">⭐⭐⭐</option>
      <option value="4">⭐⭐⭐⭐</option>
      <option value="5">⭐⭐⭐⭐⭐</option>
    </select>

    <label>Was the diagnosis helpful?</label>
    <label><input type="radio" name="helpful" value="yes" required> Yes</label>
    <label><input type="radio" name="helpful" value="no"> No</label>

    <label>Comments (optional):</label>
    <textarea name="comment" placeholder="Tell us more..."></textarea>

    <button type="submit">Submit Feedback</button>
  </form>
</main>
